@*@model IEnumerable<CBIB.Models.Author>*@

@model CBIB.Views.ViewModels.AuthorIndexViewModel
@{
    ViewData["Title"] = "Index";
}
<div class="container body-content">
    <h3>Authors</h3>

    <form asp-controller="Authors" asp-action="Index">
        <p>
            <input type="text" name="id">
            <input type="submit" value="search" />
        </p>
    </form>

    <table class="table">
        <thead>
            <tr>
                <th>Author Name</th>
                <th>Node</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model.dict)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Key.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value)
                    </td>
                    <td>
                        <!--<a asp-action="Edit" asp-route-id="@item.Key.AuthorID">Edit</a> |-->
                        <a asp-action="Details" asp-route-id="@item.Key.AuthorID">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
